<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/band_list_item_height"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/band_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:text="Band name"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:paddingStart="@dimen/text_view_padding"
        android:paddingEnd="@dimen/text_view_padding"/>

    <TextView
        android:id="@+id/genre"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:text="Genre"
        android:gravity="center"
        android:layout_toEndOf="@id/band_name"
        android:paddingStart="@dimen/text_view_padding"
        android:paddingEnd="@dimen/text_view_padding"/>

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:text="Genre"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:paddingStart="@dimen/text_view_padding"
        android:paddingEnd="@dimen/text_view_padding"/>

</RelativeLayout>